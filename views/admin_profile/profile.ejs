<%- include('../partials/admin_profile/_head.ejs') %>
<style>
    .rounded-circle {
        border-radius: 50%;
        box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.75); /* Mengatur bayangan: horisontal-offset vertical-offset blur spread color */
        object-fit: cover; /* Mengatasi gambar yang terlalu panjang atau lebar */
        width: 250px; /* Atur lebar sesuai kebutuhan */
        height: 250px; /* Atur tinggi sesuai kebutuhan */
    }
</style>

<%- include('../partials/admin_profile/_navbar.ejs') %>

<div class="container my-5">
    <!-- Judul -->
    <div class="text-center mb-4" style="margin-top: 80px;">
        <h2>Admin Profile</h2>
    </div>
    <!-- Profile Page Content -->
    <div class="container-fluid mt-5">
        <!-- Content -->
        <div class="container mt-5">
            <div class="row mt-5">
                <div class="col-4 text-center">
                    <img src="/images/upload/<%= data[0].file_user %>" width="250" alt="Nama Gambar" class="img-fluid rounded-circle">
                </div>
                <div class="col-8">
                    <div class="card shadow-lg mb-4 border-left-success">
                        <div class="card-header py-3 d-flex justify-content-end align-items-end">
                            <a href="/profile/edit/<%= data[0].id_users %>" class="btn btn-sm btn-success text-black">
                                <i class="fas fa-edit fa-sm text-black"></i> Edit Profile
                            </a>
                        </div>
                        <div class="card-body">
                            <div class="profile-info">
                                <p><strong>Nama :</strong> <%= data[0].nama_users %></p>
                                <p><strong>Email :</strong> <%= data[0].email %></p>
                                <p><strong>Level :</strong> 
                                    <% if(data[0].role == 1) { %>
                                        Admin
                                    <% } else if (data[0].role == 2) { %>
                                        Konsumen
                                    <% } else { %>
                                        User
                                    <% } %>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Activities Section -->
            <div class="row mt-5">
                <div class="col-12">
                    <h3>Activities</h3>
                </div>
                <% activities.forEach(function(activity) { %>
                    <div class="col-md-4 mt-3">
                        <div class="card shadow-lg">
                            <div class="card-body">
                                <h5 class="card-title"><%= activity.judul_video %></h5>
                                <p class="card-text"><small class="text-muted">Date: <%= activity.time %></small></p>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
        <!-- /Content Row -->
    </div>
    <!-- /Profile Page Content -->
</div>

<%- include('../partials/admin_profile/_contact.ejs') %>
<%- include('../partials/admin_profile/_footer.ejs') %>
